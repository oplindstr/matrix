<%= javascript_include_tag 'datatable' %>

<div class="box">
  <h1 class="title">Jäsenet</h1>

  <table id="datatable" class="table is-narrow">
    <thead>
      <tr>
        <th>Sukunimi</th>
        <th>Etunimet</th>
        <th>Kutsumanimi</th>
        <th>Osoite</th>
        <th>Kaupunki</th>
        <th>Sähköpostiosoite</th>
        <th>Jäsentyyppi</th>
        <th>Liittymisvuosi</th>
        <th>Liittymisaika</th>
        <th>Käyttäjätunnus</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @members.each do |member| %>
        <tr>
          <td><%= member.lastname %></td>
          <td><%= member.firstname %></td>
          <td><%= member.nickname %></td>
          <td><%= member.address %></td>
          <td><%= member.city %></td>
          <td><%= member.email %></td>
          <td><%= member.membership_type %></td>
          <td><%= member.joined %></td>
          <td><%= member.created_at %></td>
          <td><%= member.username %></td>
          <td><%= link_to 'Muokkaa', edit_member_path(member) %></td>
          <td><%= link_to 'Poista', member, method: :delete, data: { confirm: 'Oletko varma?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Uusi jäsen', new_member_path %>
</div>
