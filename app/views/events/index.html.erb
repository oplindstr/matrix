<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Starttime</th>
      <th>Endtime</th>
      <th>Location</th>
      <th>Type</th>
      <th>Signup required</th>
      <th>Signup start</th>
      <th>Signup end</th>
      <th>Signup cancellable until</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.starttime %></td>
        <td><%= event.endtime %></td>
        <td><%= event.location %></td>
        <td><%= event.type %></td>
        <td><%= event.signup_required %></td>
        <td><%= event.signup_start %></td>
        <td><%= event.signup_end %></td>
        <td><%= event.signup_cancellable_until %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

