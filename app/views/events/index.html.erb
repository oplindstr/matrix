<div class="box">

  <h1 class="title is-spaced">Kalenteri</h1>

  <% @events.each do |event| %>

    <h2 class="subtitle"><%= link_to event.name, event %></h2>
    <p><%= DateHelper.standard_time(event.starttime) %></p>
    <% if event.location and event.location.length > 0 %>
      <p>@ <%= event.location %></p>
    <% end %>
    <p>
      <% if event.signup_open %>
        <br>
        <i>Ilmoittautuminen tapahtumaan on k채ynniss채 ja p채채ttyy <%= DateHelper.standard_time2(event.signup_end) %> </i>
      <% elsif event.signup_required %>
        <br>
        <i>Ilmoittautuminen tapahtumaan alkaa <%= DateHelper.standard_time2(event.signup_start) %> </i>
      <% end %>
    </p>

    <br>

    <pre><%= event.descr %></pre>

    <% if event != @events.last %>
      <hr>
    <% end %>

  <% end %>

</div>

