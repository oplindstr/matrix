<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div ng-controller="NewEventController">

  <div class="field">
    <%= f.label 'Nimi' %> (pakollinen kenttä)<br>
    <%= f.text_field :name %>
  </div>
    <div class="field">
      <%= f.label 'Kuvaus' %> (pakollinen kenttä)<br>
      <%= f.text_area :descr, :rows => "10", :cols => "30" %>
    </div>
  <div class="field">
    <%= f.label 'Alkaa' %><br>
    <%= f.datetime_select :starttime %>
  </div>
  <div class="field">
    <%= f.label 'Loppuu' %><br>
    <%= f.datetime_select :endtime %>
  </div>
  <div class="field">
    <%= f.label 'Paikka' %><br>
    <%= f.text_field :location %>
  </div>
    <div class="field">
      <%= f.label 'Hinta' %><br>
      <%= f.number_field :price %>
    </div>

  <div class="field">
    <%= f.label 'Tyyppi' %><br>
    <%= f.text_field :event_type %>
  </div>
  <div class="field">
    <%= f.label 'Täytyykö ilmoittautua' %><br>
    <input name="event[signup_required]" type="hidden" value="0" /><input type="checkbox" ng-model="signup" value="1" name="event[signup_required]" id="event_signup_required" />
  </div>

  <div name="signup-options" ng-show="signup">

    <div class="field">
      <%= f.label 'Ilmoittautumisraja' %><br>
      <%= f.number_field :signup_limit %>
    </div>

      <div class="field">
        <%= f.label 'Ilmoittautuminen alkaa' %><br>
        <%= f.datetime_select :signup_start %>
      </div>
      <div class="field">
        <%= f.label 'Ilmoittautuminen päättyy' %><br>
        <%= f.datetime_select :signup_end %>
      </div>
      <div class="field">
        <%= f.label 'Ilmoittautuminen sitova alkaen' %><br>
        <%= f.datetime_select :signup_cancellable_until %>
      </div>

  </div>

  <div name="email">
    
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

</div>

<% end %>
