<%= form_for @event do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= javascript_include_tag 'events' %>

  <div class="field">
    <%= f.label :name, 'Nimi' %> (pakollinen kenttä)<br>
    <%= f.text_field :name %>
  </div>
    <div class="field">
      <%= f.label :descr, 'Kuvaus' %> (pakollinen kenttä)<br>
      <%= f.text_area :descr, :rows => "10", :cols => "50" %>
    </div>
  <div class="field">
    <%= f.label :starttime, 'Alkaa' %><br>
    <%= f.datetime_select :starttime %>
  </div>
  <div class="field">
    <%= f.label :endtime, 'Loppuu' %><br>
    <%= f.datetime_select :endtime %>
  </div>
  <div class="field">
    <%= f.label :location, 'Paikka' %><br>
    <%= f.text_field :location %>
  </div>
    <div class="field">
      <%= f.label :price, 'Hinta' %><br>
      <%= f.number_field :price %>
    </div>

  <div class="field">
    <%= f.label :event_type, 'Tyyppi' %><br>
    <%= f.text_field :event_type %>
  </div>
  <div class="field">
    <%= f.label :signup_required, 'Täytyykö ilmoittautua' %><br>
    <%= f.check_box :signup_required, { :onchange => '$("#signup-options").toggle()' } %>
  </div>

  <div id="signup-options">

    <div class="field">
      <%= f.label :signup_limit, 'Ilmoittautumisraja' %><br>
      <%= f.number_field :signup_limit %>
    </div>

      <div class="field">
        <%= f.label :signup_start, 'Ilmoittautuminen alkaa' %><br>
        <%= f.datetime_select :signup_start %>
      </div>
      <div class="field">
        <%= f.label :signup_end, 'Ilmoittautuminen päättyy' %><br>
        <%= f.datetime_select :signup_end %>
      </div>
      <div class="field">
        <%= f.label :signup_cancellable_until, 'Ilmoittautuminen sitova alkaen' %><br>
        <%= f.datetime_select :signup_cancellable_until %>
      </div>
      <div class="field">
        <%= f.label :members_only, 'Vain jäsenille' %><br>
        <%= f.check_box :members_only %>
      </div>

      <h2>Lisätiedot</h2>

      <div name='event_parameters'>
        <div class='items'>
          <%= f.nested_fields_for :event_parameters, :wrapper => false do |p| %>
            <div class="fields">
              <div class="field">
                <%= p.label :name, 'Nimi' %><br>
                <%= p.text_field :name  %>
              </div>
              <div class="field">
                <%= p.label 'Tyyppi' %><br>
                <%= p.select(:event_parameter_type_id, options_from_collection_for_select(@event_parameter_types, :id, :name, p.object.event_parameter_type_id), {}, :onchange => "show_event_parameter_choices(this.id, this.value)") %>
                <div class="event_parameter_choices" style="display: none">
                  <%= p.nested_fields_for :event_parameter_choices, :wrapper => false do |c| %>
                     <div class='fields'>
                      <div class="field">
                        <%= c.label :value, 'Vaihtoehto' %><br>
                        <%= c.text_field :value %>
                      </div>
                    </div>
                  <% end %>
                  <br>
                  <%= p.add_nested_fields_link :event_parameter_choices, "Lisää vaihtoehto", :class => 'btn btn-primary' %>
                </div>
              </div>
              <div class="field">
                <%= p.label :required, 'Pakollinen' %><br>
                <%= p.check_box :required  %>
            </div>
         <% end %>
        </div>
         <%= f.add_nested_fields_link :event_parameters, "Lisää kenttä", :class => 'btn btn-primary' %>
      </div>
      <br>

  </div>

  <div class="actions">
    <%= f.submit 'Tallenna' %>
  </div>

<% end %>
