<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Matrix ry" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Matrix" %>">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.13/angular.min.js"></script>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'framework' %>
    <%= csrf_meta_tags %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-77034714-1', 'auto');
      ga('send', 'pageview');

    </script>
  </head>
  <body class="body">
    <header>
      <div class="container">
        <div class="row">
          <div class="col-md-4">
            <%= image_tag("logo.gif") %>
          </div>
          <div class="col-md-8">
            <h1>
              <span id="org_name">Matematiikan opiskelijaryhmä Matrix ry</span>
            </h1>
            <h2>
              <span id="org_descr">Helsingin yliopiston matematiikan<br>opiskelijoiden ainejärjestö</span>
            </h2>
          </div>
        </div>
      </div>
    <br>
    </header>
    <%= render 'layouts/navigation' %>
    <main role="main" ng-app="matrixApp">
    <p id="notice"><%= notice %></p>
      <div class="login">
        <% if !session[:user_id] %>
            <%= form_tag session_path do %>
                <span> Käyttäjätunnus: </span><%= text_field_tag :username, params[:username], :class => "login-input" %>
                <span> Salasana: </span><%= password_field_tag :password, params[:password], :class => "login-input" %>
                <%= submit_tag "Kirjaudu", :class => "login-input" %>
            <% end %>
            <span><%= link_to 'Unohditko salasanasi?', password_recovery_path %></span><br>
            <span><%= link_to 'Unohditko käyttäjätunnuksesi?', username_recovery_path %></span>
        <% else %>
            <%= current_user.firstname %> <%= current_user.lastname %> kirjautuneena.
            <%= link_to 'Kirjaudu ulos', signout_path, method: :delete %>
            <% if admin %>
              <%= link_to 'Admin-toiminnot', '/admin' %>
            <% end %>
        <% end %>
      </div>
      <%= yield %>
    </main>
    <footer>
      <div class="middle">
        <h2>Yhteistyökumppanit</h2>
        <br>
        <%= image_tag("solinor.png") %>
      </div>
    </footer>
  </body>
</html>
