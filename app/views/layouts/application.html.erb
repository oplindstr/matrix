<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Matrix" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Matrix" %>">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.13/angular.min.js"></script>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <span class="logo"><%= image_tag('logo.gif') %></span>
  <body class="body">
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <main role="main" ng-app="matrixApp">
      <% if !session[:user_id] %>
          <%= form_tag session_path do %>
              Käyttäjätunnus <%= text_field_tag :username, params[:username] %>
              Salasana <%= password_field_tag :password, params[:password] %>
              <%= submit_tag "Kirjaudu" %>
          <% end %>
      <% else %>
          <%= current_user.firstname %> <%= current_user.lastname %> kirjautuneena. <br>
          <%= link_to 'Kirjaudu ulos', signout_path, method: :delete %></li>
      <% end %>
       <%= render 'layouts/messages' %>
       <%= yield %>
    </main>
  </body>
</html>
