<p id="notice"><%= notice %></p>

<h1>Ratings</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nimi</th>
      <th>Odotusarvo</th>
      <th>Keskihajonta</th>
      <th>Varmuus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.expectation %></td>
        <td><%= player.deviation %></td>
        <td><%= player.expectation - 3*player.deviation %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

