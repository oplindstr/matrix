<%= form_for(@post_comment) do |f| %>

  <div class="field">
    <%= f.hidden_field(:post_id, :value => @post.id) %>
  </div>

  <div class="field">
    <%= f.hidden_field(:user_id, :value => current_user.id) %>
  </div>

  <div class="field">
    <%= f.text_area :comment, :placeholder => 'Kirjoita kommentti' %>
  </div>
  <div class="actions">
    <%= f.submit "Lisää kommentti" %>
  </div>
<% end %>
