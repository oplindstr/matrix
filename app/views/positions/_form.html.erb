<%= form_for(@position) do |f| %>

  <div class="field">
    <%= f.label :name, :class => 'label' %>
    <div class="control">
      <%= f.text_field :name, :class => 'input' %>
    </div>
  </div>

  <div class="field">
    <%= f.label :name_eng, :class => 'label' %>
    <div class="control">
      <%= f.text_field :name_eng, :class => 'input' %>
    </div>
  </div>

  <div class="field">
    <%= f.label 'Prioriteetti', :class => 'label' %>
    <div class="control">
      <%= f.number_field :priority, :class => 'input' %>
    </div>
  </div>



  <div class="field">
    <label class="checkbox">
      <%= f.check_box :show_in_contact_info %>
      Näytä yhteystiedoissa
    </label>
  </div>
  

  <div class="actions">
    <%= f.submit t('Save'), :class => 'button is-link' %>
  </div>
<% end %>