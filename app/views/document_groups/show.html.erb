<div class="box">

   <h2 class="title"> <%= @document_group.get_name %> </h2>

   <% if sub_admin %>

      <%= link_to t('new_document'), new_document_for_group_path(@document_group_id), class: "btn btn-primary" %><br>
      <%= link_to t('edit_group'), edit_document_group_path(@document_group) %><br>
      <%= link_to t('remove_group'), @document_group, method: :delete, data: { confirm: "#{t('are_you_sure')}?" } %>

      <br>
      <br>
   <% end %>

   <table class="table">
      
      <tbody>
         <% @documents.each do |document| %>
            
            <tr>
               <td><%= link_to document.get_name, document.attachment_url %></td>
               <% if sub_admin %>
                  <td><%= link_to t('Edit'), edit_document_path(document) %></td>
                  <td><%= button_to t('Remove'),  document, method: :delete, class: "button is-danger", data: {confirm: "#{t('are_you_sure')}?"} %></td>
               <% end %>
            </tr>
            
         <% end %>
      </tbody>
      
   </table>

</div>
