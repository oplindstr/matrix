<div class="box">

  <h1 class="title is-spaced">Dokumentit</h1>

  <% @document_group_categories.each do |document_group_category| %>
           
    <% if sub_admin %>

      <h3 class="subtitle"><%= link_to document_group_category.name, document_group_category %></h3>

    <% else %>

      <h3 class="subtitle"><%= document_group_category.name %></h3>

    <% end %>

    <ul>

    <% @document_groups.select{ |m| m.document_group_category and m.document_group_category.id == document_group_category.id}.each do |document_group| %>

    	<li><%= link_to document_group, "/dokumentit/" + document_group.name.tr(' ', '+') %></li>

    <% end %>

    </ul>

    <br>
           
  <% end %>

  <% if sub_admin %>

    <%= link_to 'Luo uusi dokumenttikategoria (p채채taso)', new_document_group_category_path %>

    <br><br>

    <%= link_to 'Lis채채 dokumentti', new_document_path %>

  <% end %>
</div>