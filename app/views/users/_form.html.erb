<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <% if @user.new_record? %>
        <div class="field">
          <%= f.label :username, 'Käyttäjätunnus' %><br>
          <%= f.text_field :username %>
        </div>
    <% end %>
    <div class="field">
      <% if !@user.new_record? %>
          Uusi
      <% end %>
      <%= f.label :password, 'Salasana'%><br />
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, 'Salasana uudelleen' %><br />
      <%= f.password_field :password_confirmation %>
    </div>
    <div class="actions">
      <% if @user.new_record? %>
          <%= f.submit :value => 'Luo tunnus' %>
      <% else %>
          <%= f.submit :value => 'Tallenna' %>
      <% end %>
    </div>
<% end %>
