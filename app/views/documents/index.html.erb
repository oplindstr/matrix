<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<br />

<% if admin %>

   <%= link_to "New Document", new_document_path, class: "btn btn-primary" %>

<% end %>
<br />
<br />

<table class = "table table-bordered table-striped">
   <thead>.
      <tr>
         <th>Name</th>
         <th>Download Link</th>
         <th> </th>
      </tr>
   </thead>
   
   <tbody>
      <% @documents.each do |document| %>
         
         <tr>
            <td><%= document.name %></td>
            <td><%= link_to "Download Document", document.attachment_url %></td>
            <% if admin %>
            <td><%= button_to "Delete",  document, method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure that you wish to delete #{document.name}?"} %></td>
            <% end %>
         </tr>
         
      <% end %>
   </tbody>
   
</table>
