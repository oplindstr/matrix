<%= form_for(@document) do |f| %>

    <div class="field">
        <%= f.label :name, :class => 'label' %>
        <div class="control">
            <%= f.text_field :name, :class => 'input', :required => true %>
        </div>
    </div>

    <div class="field">
        <%= f.label :name_eng, :class => 'label' %>
        <div class="control">
            <%= f.text_field :name_eng, :class => 'input' %>
        </div>
    </div>

    <div class="field">
        <div class="control">
            <%= f.file_field :attachment, accept: 'text/txt' %>
        </div>
    </div>

    <div class="field">
        <% if @document_group_id %>
            <%= f.hidden_field :document_group_id, :value => @document_group_id %>
        <% else %>
            <%= f.label :document_group_id, :class => 'label'  %>
            <div class="select">
                <%= f.select :document_group_id, options_from_collection_for_select(@document_groups, :id, :name, @document.document_group_id) %>
            </div>
        <% end %>
    </div>

    <div class="actions">
        <%= f.submit :value => t('Save'), :class => 'button is-link' %>
    </div>

<% end %>

<% if @document_group_id %>
    <br>
    <%= link_to t('Back'), document_group_path(@document_group_id) %>
<% end %>