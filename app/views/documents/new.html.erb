<% if !@document.errors.empty? %>
   <div class = "alert alert-error">
      
      <ul>
         <% @document.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
         <% end %>
      </ul>
      
   </div>
<% end %>

<div class = "well">
   <%= form_for @document, html: { multipart: true } do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :attachment %>
      <%= f.file_field :attachment, accept: 'text/txt' %>
      <% if @document_group_id %>
         <%= f.hidden_field :document_group_id, :value => @document_group_id %>
      <% else %>
         <%= f.label :document_group_id %>
         <%= f.select :document_group_id, options_from_collection_for_select(@document_groups, :id, :name) %>
      <% end %>
      <%= f.submit "Save", class: "btn btn-primary" %>
   <% end %>
</div>
