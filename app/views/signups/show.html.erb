<h2><%= @event.name %></h2>

<h3>Ilmoittautuneet</h3>

<div id="Event" class="container-fluid">

  <div class="col-lg-9">

        <% if @signups %>

            <table>
              <thead>
              <tr>
                <th>Nimi</th>
              </tr>
              </thead>

              <tbody>
              <% @signups.each do |signup| %>
                  <tr>
                    <td><%= @signup_count %>. <%= signup %></td>
                    <% @signup_count = @signup_count + 1 %>
                  </tr>
              <% end %>
              </tbody>
            </table>

            <br>
        </div>

   </div>

    <%= link_to 'Takaisin tapahtumaan', event_path(@event.id) %>

<% end %>
