<h2><%= @event.name %></h2>

<h3>Ilmoittautuneet</h3>

<div id="Event" class="container-fluid">

  <div class="col-lg-9">

        <% if @signups %>

            <table>
              <thead>
              <tr>
                <th></th>
                <th>Nimi</th>
                <% if admin %>
                  <th>Sähköposti</th>
                  <th>Puhelinnumero</th>
                  <% @event.event_parameters.each do |param| %>
                    <th> <%= param.name %> </th>
                  <% end %>
                <% end %>
              </tr>
              </thead>

              <tbody>
              <% @signups.each do |signup| %>
                <tr>
                  <td><%= @signup_count %>. </td>
                  <td><%= signup %></td>
                  <% if admin %>
                    <td><%= signup.get_email %></td>
                    <td><%= signup.get_phonenumber %></td>
                    <% signup.signup_parameters.each do |param| %>
                      <% if param.event_parameter %>
                        <td><%= param.value %></td>
                      <% end %>
                    <% end %>
                  <% end %>
                  <% @signup_count = @signup_count + 1 %>
                </tr>
              <% end %>
              </tbody>
            </table>

            <br>
        </div>

   </div>

    <%= link_to 'Takaisin tapahtumaan', event_path(@event.id) %>

<% end %>
