<p id="notice"><%= notice %></p>

<% render 'players/title' %>

<% if @ongoing %>
    <h1>Keskeneräiset pelit</h1>
<% else %>
    <h1>Listing Matches</h1>
<% end %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Pelaaja1</th>
      <th>Pelaaja2</th>
      <th>vastaan</th>
      <th>Pelaaja3</th>
      <th>Pelaaja4</th>
      <% if !@ongoing %>
      <th>Winners</th>
      <% end %>
      <th>Aloitettu</th>
      <th>Tilanne</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.firstPlayer.name %></td>
        <td><%= match.secondPlayer.name %></td>
        <td>vastaan</td>
        <td><%= match.thirdPlayer.name %></td>
        <td><%= match.fourthPlayer.name %></td>
        <% if !@ongoing %>
            <td><%= match.winners %></td>
        <% end %>
        <td><%= match.created_at %></td>
        <td><%= match.pair1points %> / <%= match.pair2points %></td>
        <% if admin %>
            <td><%= link_to 'Show', match %></td>
            <td><%= link_to 'Edit', edit_match_path(match) %></td>
            <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
            <td><%= link_to 'Jatka peliä', match %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if !@ongoing %>
    <%= link_to 'New Match', new_match_path %>
<% end %>
